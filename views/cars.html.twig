<html>
    <head>
        <title>Our Car Inventory</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h1>Our list of cars</h1>
                    {% for car in cars %}
                    <ul>
                        <li>{{ car.getMake }}</li>
                        <li>{{ car.getMiles }}</li>
                        <li>{{ car.getPrice }}</li>
                        <li><img src="/../{{ car.getImagePath }}"></li>
                    </ul>
                    {% endfor %}
                </div>
                <div class="col-sm-6">
                    <h2>Search for a car</h2>
                    <form  action='/search_car' method='post'>
                      <div class='form-group'>
                        <label for='price'>Enter Maximum Price</label>
                        <input type='number' name='price' id='price' class='form-control'>
                      </div>
                      <div class='form-group'>
                          <label for='miles'>Enter Maximum Miles</label>
                          <input type='number' name='miles' id='miles' class="form-control">
                      </div>
                      <button name='submit' class='btn btn-success'>Submit</button>

                      <h2>Add your car!</h2>
                     
                </div>
            </div>
        </div>
    </body>
</html>
